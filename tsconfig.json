{
  // this file (and `tsc` in general) is only used for validation, NOT compilation
  "include": ["src/**/*", "index.d.ts"],
  "compilerOptions": {
    "strict": true,
    "moduleResolution": "node",
    "jsx": "react",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  }
}
